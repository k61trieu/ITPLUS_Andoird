<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="2dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="10dp"
                android:layout_gravity="right"
                android:src="@drawable/new_word"
                android:layout_width="80dp"
                android:layout_height="80dp"></ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgProductAvatar"
                    android:src="@drawable/nopicture"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center|top"
                    android:layout_width="100dp"
                    android:layout_height="100dp"></ImageView>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtvProducName"
                    android:text="Ten san pham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:id="@+id/txtvProductPrice"
                    android:text="Gia san pham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>